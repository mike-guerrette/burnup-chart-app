<div id="container2" class = 'chart'></div>

<script type="text/javascript">
    $(function () {
        $('#container2').highcharts({
            chart: {
                zoomType: 'x',
                alignTicks: false
            },
            credits: {
                enabled: false
            },
            title: {
                text: '<%= @project.name.to_s %> - Six Months'
            },
            xAxis: {
                categories: <%= raw @months.to_json %>
            },
            yAxis: [{
                min: 0,
                tickInterval: 2,
                title: {
                    text: 'Weekly Tasks/Stories'
                },
                stackLabels: {
                    enabled: true,
                    style: {
                        fontWeight: 'bold',
                        color: (Highcharts.theme && Highcharts.theme.textColor) || 'gray'
                    }
                },
                opposite: true
            },
                {
                    min: 0,
                    max: <%= @scope %> + 20,
                    gridLineWidth: 0,
                    title: {
                        text: 'Cumulative Tasks / Stories'
                    },
                    plotLines: [{
                        color: '#000',
                        dashStyle: 'longdash',
                        width: 2,
                        value: <%= @scope %>
                    }],
                    stackLabels: {
                        style: {
                            fontWeight: 'bold',
                            color: (Highcharts.theme && Highcharts.theme.textColor) || 'gray'
                        }
                    }

                }],
            legend: {
                align: 'right',
                x: -70,
                verticalAlign: 'top',
                y: 20,
                floating: true,
                backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColorSolid) || 'white',
                borderColor: '#CCC',
                borderWidth: 1,
                shadow: true
            },
            tooltip: {
                formatter: function() {
                    return '<b>'+ this.x +'</b><br/>'+
                            this.series.name +': '+ this.y +'<br/>'
                }
            },
            plotOptions: {
                column: {
                    stacking: 'normal',
                    dataLabels: {
                        enabled: true,
                        color: 'transparent',
                    }
                }
            },


            series: <%= raw @series2.to_json %>
        });
    });


</script>