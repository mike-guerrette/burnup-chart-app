<h1><%= @project.name %> - Task Time Table</h1>

<table border = "1" class = "task_data">
  <thead>
  <tr>
    <th>Task Type</th>
    <th>Number of Tasks</th>
    <th>Number of Days on Hold</th>
    <th>Number of Days Spent</th>
    <th>Average Days Spent</th>
    <th>Average Days on Hold</th>
  </tr>
  </thead>

  <tbody>
  <% @data.each do |d| %>
      <tr>
        <td><%= d.fetch(:task_type) %></td>
        <td><%= d.fetch(:num_tasks) %></td>
        <td><%= d.fetch(:days_on_hold) %></td>
        <td><%= d.fetch(:num_days) %></td>
        <td><%= d.fetch(:num_days) / d.fetch(:num_tasks).to_f %></td>
        <td><%= d.fetch(:days_on_hold) / d.fetch(:num_tasks).to_f %></td>
      </tr>

  <% end %>
  </tbody>
</table>
<br>

<%= link_to "Back", project_tasks_path %>