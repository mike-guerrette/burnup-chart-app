<h1>Task Time Table</h1>

<table border = "1" class = "task_data">
  <thead>
  <tr>
    <th>Tasktype</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Days on hold</th>
    <th><%= @tasktypes %></th>
    <th><%= @data %></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tasktype %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.days_on_hold %></td>
        <td></td>
        <td></td>
      </tr>

  <% end %>
  </tbody>
</table>
